<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center"> Create a New Post </h1>
        <div style="width: 30%; margin: 25px auto">
            <form action="/posts" method = "POST">
                <div class="form-group">
                    <input class="form-control " type="text" placeholder="name" name="camp[name]">
                </div>
                <div class="form-group">
                    <input class="form-control " type="number" placeholder="price" name="camp[price]" min="0.00" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="image" name="camp[image]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="image" name="camp[description]">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-large btn-block"> SUBMIT </button>
                </div>
            </form>

            <a href="/posts"> Go Back </a>
        </div>
    </div>
</div>

<% include ../partials/footer %>
