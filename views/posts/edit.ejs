<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center"> Edit <%= campground.name %> </h1>
        <div style="width: 30%; margin: 25px auto">
            <form action="/posts/<%= campground._id %>?_method=PUT" method = "POST">
                <div class="form-group">
                    <input class="form-control " type="text" value="<%= campground.name %>" name="campground[name]">
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" name="campground[description]" rows="5" cols="70"><%= campground.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-large btn-block"> SUBMIT </button>
                </div>
            </form>

            <a href="/posts"> Go Back </a>
        </div>
    </div>
</div>

<% include ../partials/footer %>