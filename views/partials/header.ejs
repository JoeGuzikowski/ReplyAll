<!DOCTYPE html>
<html>
    <head>
        <title>
            ReplyAll
        </title>
        <!-- Bootstrap 3.3 -->
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
        <link rel="stylesheet" href="/stylesheets/main.css">
    </head>
    <body>

    <nav class="navbar navbar-inverse">
        <div class="container">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-RA" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/">ReplyAll <span class="glyphicon glyphicon-share-alt"></span </a>
                </div>
                <div class="collapse navbar-collapse" id="navbar-collapse-RA">
                    <ul class="nav navbar-nav navbar-right">
                        <% if (!currentUser) { %>
                            <li> <a href="/login"> Login </a> </li>
                            <li> <a href="/register"> Sign Up </a> </li>
                        <% } else { %>
                            <li><a> Signed in as <%= currentUser.username %> </a></li>
                            <li> <a href="/logout"> Logout </a> </li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <div class="container">
        <% if (success && (success.length > 0) ){ %>
        <div class="alert alert-success" role="alert">
            <%= success %>
        </div>
        <% } %>
        <% if (error && (error.length > 0) ){ %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
        <% } %>
    </div>