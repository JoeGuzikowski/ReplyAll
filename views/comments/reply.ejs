<% include ../partials/header %>

<div class="container">
    <div class="row" id="reply">
        <h2> Replying to <%= parentComment.author.username %>'s comment </h2>
        <h4> <%= parentComment.author.username %> said: </h4>
        <h4> "<%= parentComment.text %>" </h4>
        <div style="width: 30%; margin: 25px auto">
            <form action="/posts/<%= campground._id %>/comments/<%= parentComment._id %>/reply" method = "POST">
                <div class="form-group">
                    <textarea class="form-control" name="commentReply_<%= parentComment._id.toString() %>" placeholder="Write your comment..." rows="5" cols="70"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-large btn-block"> SUBMIT </button>
                </div>
            </form>

            <a href="/posts/<%= campground._id %>"> Go Back </a>
        </div>
    </div>
</div>

<% include ../partials/footer %>
